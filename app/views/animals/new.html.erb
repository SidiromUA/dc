<h3>Додати друга</h3>
<%= form_with scope: :animal, url: animals_path, local: true do |form| %>
  <p>
    <%= form.label "Хто шукає дім?" %><br>
    <%= form.select :kind, Animal.kinds.keys %>
  </p>

  <p>
    <%= form.label "Кличка" %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label "Додати фото" %>
    <%= form.file_field :avatar %><br>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
