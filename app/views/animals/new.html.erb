<%= stylesheet_link_tag "animals" %>

<div class="container" align="center">
  <div class="notification">
<h4 class="subtitle is-4">Додати друга</h4>

<%= form_with scope: :animal, url: animals_path, local: true do |form| %>
    <%= form.label "Хто шукає дім:", class: 'subtitle is-6' %>
<br>
  <div>
    <%= form.select :kind, Animal.kinds.keys, {}, {class: "field control select"} %>
  </div>
  <div>
    <%= form.label "Кличка", class: "subtitle is-6" %>
  <br>
    <%= form.text_field :title, class: "input" %>
  </div>
  <br>
    <div class="file has-name">
  <label class="file-label">
  <%= form.file_field :avatar, class:"file-input" %>
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Вибрати фото
      </span>
    </span>
    <span class="file-name">
      ХЄРНЯ
    </span>
  </label>
</div>
  <br>
  <div class="button-group">
    <%= form.submit "Додати", class: 'control button is-primary' %>
    <%= link_to 'Back', animals_path, class: 'button is-info' %>
  </div>
<% end %>
  </div>
</div>
